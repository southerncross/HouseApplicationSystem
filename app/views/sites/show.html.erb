<% content_for :stylesheets do %>

.types-g-fixed {
height: 600px;
}
.my-head {
margin-top: 40px;
text-align: center;
}

.my-sidebar {
padding-right: 0;
margin-top: 100px;
//border-right: 1px solid #eeeeee;
}

.my-title {
martin-top: 40px;
}

<% end %>

<div class="am-g am-g-fixed am-u-sm-centered">
  <header class="my-head">
    <div class="am-article">
      <h1 class="am-article-title"><%= @site.name %>地块</h1>
    </div>
    <hr class="am-article-divider"/>
  </header>

  <div class="am-u-sm-2">
    <ul class="am-list am-list-border my-sidebar">
      <% @sites.each do |site| %>
      <li>
        <%= link_to site.name, controller: "sites", action: "show", id: site %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="am-u-sm-10">
    <div class="am-g">
      <div class="am-u-sm-8 am-img-thumbnail">
        <%= image_tag "sites/#{@site.name}.jpg" %>
      </div>

      <div class="am-u-sm-4">
        <p><span class="am-badge am-badge-success am-radius am-text-lg">面积</span><%= @site.area %>平方米</p>
        <p><span class="am-badge am-badge-primary am-radius am-text-lg">餐饮</span><%= @site.food %></p>
        <p><span class="am-badge am-badge-warning am-radius am-text-lg">交通</span><%= @site.transportation %></p>
        <p><span class="am-badge am-badge-danger am-radius am-text-lg">医疗</span><%= @site.medicine %></p>
      </div>
    </div>

    <div class="am-g">
      <h1 class="my-head">包含户型</h1>
      <hr>
      <div class="am-u-sm-8 am-img-thumbnail" id="sites-svg" data-am-popover="{content: '点击楼房以查看详细信息', trigger: 'hover focus'}">
        <%= inline_svg 'Ec.svg' %>
      </div>

      <div class="am-u-sm-4">
        <p><span class="am-badge am-badge-primary am-round am-text-lg" id="badge-wuA">T-1</span>(345套)</p>
        <p><span class="am-badge am-badge-secondary am-round am-text-lg" id="badge-chenA">T-2</span>(128套)</p>
        <p><span class="am-badge am-badge-success am-round am-text-lg" id="badge-chenB">T-3</span>(764套)</p>
        <p><span class="am-badge am-badge-warning am-round am-text-lg" id="badge-ziA">T-4</span>(233套)</p>
      </div>
    </div>
  </div>
</div>

<div class="am-modal am-modal-no-btn" tabindex="-1" id="my-modal2">
  <div class="am-modal-dialog">
    <div class="am-modal-hd">B-1
      <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
    </div>
    <div class="am-modal-bd am-g">
      <div class="am-u-sm-8">
        <%= image_tag 'buildings/1.jpg' %>
      </div>
      <div class="am-u-sm-4">
        <p><span class="am-badge am-badge-success am-text-default">建筑面积</span><p><p>5480平方米</p>
            <p><span class="am-badge am-badge-primary am-text-default">包含户型</span></p><p>T-1, T-2, T-3, T-4</p>
            <p><span class="am-badge am-badge-primary am-text-default">楼层高度</span></p><p>10层</p>
            <%= link_to "了解更多信息", buildings_path, class: "am-modal-btn" %>
      </div>
    </div>
  </div>
</div>

<div data-am-widget="gotop" class="am-gotop am-gotop-default">
  <a href="#top" title="回到顶部">
    <span class="am-gotop-title">回到顶部</span>
    <i class="am-gotop-icon am-icon-chevron-up"></i>
  </a>
</div>

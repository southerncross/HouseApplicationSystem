<% content_for :stylesheets do %>
.my-block {
max-width: 200px;
}
<% end %>

<div class="am-g am-g-fixed" id="page-1">
	<section class="am-panel am-panel-secondary">
		<header class="am-panel-hd">
			<h3 class="am-panel-title">查看户型</h3>
		</header>
		<div class="am-panel-bd">
			<table class="am-table">
				<tbody>
					<tr>
						<td>90平米</td><td>1086套</td>
						<td>
							<button type="button" class="am-btn am-btn-default">午A</button>
							<button type="button" class="am-btn am-btn-default">丑阁午A（反）</button>
						</td>
					</tr>
					<tr>
						<td>120平米</td><td>729套</td>
						<td>
							<button type="button" class="am-btn am-btn-default">巳A</button>
							<button type="button" class="am-btn am-btn-default">辰B（反）</button>
							<button type="button" class="am-btn am-btn-default">子A（反）</button>
						</td>
					</tr>
					<tr>
						<td>140平米</td><td>697套</td>
						<td>
							<button type="button" class="am-btn am-btn-default">丑A</button>
							<button type="button" class="am-btn am-btn-default">丑B（反）</button>
							<button type="button" class="am-btn am-btn-default">寅A（反）</button>
							<button type="button" class="am-btn am-btn-default">卯A（反）</button>
							<button type="button" class="am-btn am-btn-default">卯B（反）</button>
							<button type="button" class="am-btn am-btn-default">辰A（反）</button>
							<button type="button" class="am-btn am-btn-default">午阁A（反）</button>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</section>

	<div class="am-u-sm-7">
		<section class="am-panel am-panel-success">
			<header class="am-panel-hd">
				<h3 class="am-panel-title">查看地块</h3>
			</header>
			<div class="am-panel-bd">
				<div class="am-panel am-panel-default am-inline-block my-block">
					<div class="am-panel-bd">
						<h3>E'地块</h3>
						<p>面积：XX平方米</p>
					</div>
				</div>
				<div class="am-panel am-panel-default am-inline-block my-block">
					<div class="am-panel-bd">
						<h3>E''地块</h3>
						<p>面积：XX平方米</p>
					</div>
				</div>
				<div class="am-panel am-panel-default am-inline-block my-block">
					<div class="am-panel-bd">
						<h3>F地块</h3>
						<p>面积：XX平方米</p>
					</div>
				</div>
				<div class="am-panel am-panel-default am-inline-block my-block">
					<div class="am-panel-bd">
						<h3>G地块</h3>
						<p>面积：XX平方米</p>
					</div>
				</div>
				<div class="am-panel am-panel-default am-inline-block my-block">
					<div class="am-panel-bd">
						<h3>G'地块</h3>
						<p>面积：XX平方米</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<div class="am-u-sm-5">
		<section class="am-panel am-panel-warning">
			<header class="am-panel-hd">
				<h3 class="am-panel-title">查看楼房</h3>
			</header>
			<div class="am-panel-bd">
				<%= inline_svg 'Ec.svg' %>
			</div>
		</section>
	</div>
</div>

<div class="am-g am-g-fixed am-hide" id="page-2">
<%= image_tag 'welcome.png' %>
</div>

<!-- 按钮触发器， 需要指定 target -->
<button class="am-btn am-btn-primary" data-am-offcanvas="{target: '#doc-oc-demo2', effect: 'push'}">切换首页</button>

<!-- 侧边栏内容 -->
<div id="doc-oc-demo2" class="am-offcanvas">
  <div class="am-offcanvas-bar">
    <div class="am-offcanvas-content">
      <p id="welcome-1"><span class="am-badge am-badge-success">首页1</span></p>
      <p id="welcome-2"><span class="am-badge am-badge-warning">首页2</span></p>
    </div>
  </div>
</div>

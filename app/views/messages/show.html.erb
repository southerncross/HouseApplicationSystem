<% content_for :stylesheets do %>
@media only screen and (min-width: 1200px) {
.blog-g-fixed {
max-width: 1200px;
}
}

@media only screen and (min-width: 641px) {
.blog-sidebar {
font-size: 1.4rem;
}
}

.blog-main {
padding: 20px 0;
}

.blog-title {
margin: 10px 0 20px 0;
}

.blog-meta {
font-size: 14px;
margin: 10px 0 20px 0;
color: #222;
}

.blog-meta a {
color: #27ae60;
}

.blog-pagination a {
font-size: 1.4rem;
}

.blog-team li {
padding: 4px;
}

.blog-team img {
margin-bottom: 0;
}

.blog-footer {
padding: 10px 0;
text-align: center;
}
<% end %>

<div class="am-g am-g-fixed blog-g-fixed">
  <div class="am-u-md-8">
    <article class="blog-main">
      <h3 class="am-article-title blog-title">
        <%= @message.title %>
      </h3>
      <h4 class="am-article-meta blog-meta">by <%= @message.date %></h4>

      <div class="am-g blog-content">
        <div class="am-g">
          <div class="am-u-sm-12">
            <%= @message.content %>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>